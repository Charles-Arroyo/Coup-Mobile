<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
        android:id="@+id/stats_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/statsLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/stats_user"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/stats_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/stats_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wins:"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/stats_losses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Losses:"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/stats_games_played"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Games Played:"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/stats_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Score: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stats_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rankings:"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/stats_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average: "
            android:textSize="18sp"
            android:padding="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/reset_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Reset Scores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsLinearLayout"
        app:layout_constraintWidth_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>
